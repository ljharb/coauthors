{
	"name": "@ljharb/coauthors",
	"version": "1.0.0",
	"description": "A cli to generate a complete git co-authors list, including existing co-authors, for use in a commit message.",
	"bin": "./bin.mjs",
	"exports": {
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepublishOnly": "safe-publish-latest",
		"lint": "eslint --ext=js,mjs .",
		"postlint": "tsc",
		"pretest": "npm run lint",
		"tests-only": "c8 tape 'test/**/*.*js'",
		"test": "npm run tests-only",
		"posttest": "npx npm@\">= 10.2\" audit --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/coauthors.git"
	},
	"keywords": [
		"git",
		"coauthors",
		"authors",
		"log",
		"commit"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/coauthors/issues"
	},
	"homepage": "https://github.com/ljharb/coauthors#readme",
	"dependencies": {
		"commit-to-co-authors": "^0.1.0",
		"pargs": "^1.0.0"
	},
	"engines": {
		"node": "^22.20 || ^24.10 || >= 25"
	},
	"devDependencies": {
		"@ljharb/eslint-config": "^21.2.0",
		"@ljharb/tsconfig": "^0.3.2",
		"@types/node": "^22.18.13",
		"@types/tape": "^5.8.1",
		"auto-changelog": "^2.5.0",
		"c8": "^10.1.3",
		"encoding": "^0.1.13",
		"eslint": "^8.8.0",
		"esmock": "^2.7.3",
		"in-publish": "^2.0.1",
		"npmignore": "^0.3.1",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.9.0",
		"typescript": "next"
	},
	"c8": {
		"all": true,
		"reporters": [
			"html",
			"text",
			"lcov"
		],
		"exclude": [
			"coverage",
			"./pargs.mjs"
		]
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows",
			".eslintrc",
			"test"
		]
	}
}
